# Server Configuration
PORT=3000
NODE_ENV=development

# Domain Configuration (Update with your domain from Namecheap)
DOMAIN=lengkundee01.org
APP_URL=https://lengkundee01.org
API_URL=https://api.lengkundee01.org

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/productionapp
DB_NAME=productionapp

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=https://lengkundee01.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# SSL/HTTPS (Set to true in production with valid SSL certificate)
SSL_ENABLED=false

